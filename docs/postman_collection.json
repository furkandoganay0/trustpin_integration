{
  "info": {
    "name": "Trustpit Integration API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "tenantId",
      "value": "demo-tenant"
    },
    {
      "key": "username",
      "value": "demo"
    },
    {
      "key": "password",
      "value": "demo"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "deviceId",
      "value": "device-1"
    },
    {
      "key": "challengeId",
      "value": ""
    },
    {
      "key": "pairingCode",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/healthz"
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenant_id\": \"{{tenantId}}\",\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": "{{baseUrl}}/api/auth/login"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const data = pm.response.json();",
              "  if (data && data.access_token) {",
              "    pm.collectionVariables.set('accessToken', data.access_token);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "MFA Enroll",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "idem-enroll-1"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"{{deviceId}}\"\n}"
        },
        "url": "{{baseUrl}}/api/mfa/enroll"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const data = pm.response.json();",
              "  if (data && data.pairing_code) {",
              "    pm.collectionVariables.set('pairingCode', data.pairing_code);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "MFA Activate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "idem-activate-1"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"pairing_code\": \"{{pairingCode}}\",\n  \"public_key\": \"demo-public-key\",\n  \"label\": \"Demo Device\"\n}"
        },
        "url": "{{baseUrl}}/api/mfa/activate"
      }
    },
    {
      "name": "MFA Create Challenge",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "idem-challenge-1"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"device_id\": \"{{deviceId}}\",\n  \"action\": \"login\",\n  \"context\": {\n    \"ip\": \"127.0.0.1\",\n    \"user_agent\": \"postman\"\n  }\n}"
        },
        "url": "{{baseUrl}}/api/mfa/challenge"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const data = pm.response.json();",
              "  if (data && data.challenge_id) {",
              "    pm.collectionVariables.set('challengeId', data.challenge_id);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "MFA Approve",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "idem-approve-1"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"challenge_id\": \"{{challengeId}}\",\n  \"device_id\": \"{{deviceId}}\",\n  \"signature\": \"demo-signature\",\n  \"payload\": {\n    \"nonce\": \"demo-nonce\"\n  },\n  \"totp_code\": \"123456\"\n}"
        },
        "url": "{{baseUrl}}/api/mfa/approve"
      }
    },
    {
      "name": "MFA Get Challenge",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "url": "{{baseUrl}}/api/mfa/challenge/{{challengeId}}"
      }
    },
    {
      "name": "MFA Get Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "url": "{{baseUrl}}/api/mfa/status/{{deviceId}}"
      }
    }
  ]
}